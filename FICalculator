// average lifetime in US = 78
// important variables: age, current net worth, income, expenses, savings rate
// asset allocation % and expected rate of return


// financial independence number = yearly spending / safe withdrawal rate
// years to FI ^ = (FI number - amount already saved) / yearly saving
// financial experts say 4% is a reasonable SWR for most people

#include <iostream>
using namespace std;

double calculations(int age, double investments, double salary, double percentage, double expenses) {
    double annualSavings = (salary - expenses) * 12;
    
    double totalSavings = expenses * 12 / percentage; // annual expenses times investment plans
    
    double amountNeeded = totalSavings - investments;
    
    // number of years it will take
}

int main() {
    int lifetime = 78;
    double swr = 0.04;
    
    // variables
    double investments, salary, expenses, savings, srate;
    int age;
    string answer;
    
    cout << "Would you like to know your ideal retirement age? (y/n): ";
    cin >> answer;
    if (answer == "y" or answer == "Y") {
        // user inputs variables
        cout << "How old are you?: ";
        cin >> age;
        cout << "How much do you have in investments: ";
        cin >> investments;
        cout << "What is your monthly salary?: ";
        cin >> salary;
        cout << "How much are your monthly expenses?: ";
        cin >> expenses;
        cout << "What percentage do you expect your investments to make: ";
        cin >> percentage;
        
        
        calculations(age, investments, salary, percentage, expenses)
        
    }
    
    
    
    
}
